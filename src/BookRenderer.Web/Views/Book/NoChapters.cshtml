@model BookRenderer.Core.Models.Book

@{
    ViewData["Title"] = $"No Chapters - {Model.Title}";
}

<div class="container mt-4">
    <div class="row">
        <div class="col-lg-8 mx-auto">
            <div class="text-center">
                <h1 class="display-4 text-muted">@Model.Title</h1>
                <div class="alert alert-warning mt-4" role="alert">
                    <h4 class="alert-heading">No Chapters Available</h4>
                    <p>@ViewBag.Message</p>
                    <hr>
                    <p class="mb-0">This book is currently empty. Please check back later or contact the administrator.</p>
                </div>
                <a href="@Url.Action("Index", "Home")" class="btn btn-primary mt-3">
                    <i class="fas fa-arrow-left"></i> Back to Books
                </a>
            </div>
        </div>
    </div>
</div>
